<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="@dimen/card_margin"
    card_view:contentPadding="@dimen/card_margin"
    card_view:cardCornerRadius="@dimen/card_margin"
    card_view:cardMaxElevation="@dimen/card_margin"
    >

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/imageView"
        android:layout_width="@dimen/image_view_width"
        android:layout_height="@dimen/image_view_height"
        android:scaleType="fitXY"
        android:padding="@dimen/image_view_padding"
        android:layout_gravity="center"
        android:gravity="center" />

</android.support.v7.widget.CardView>